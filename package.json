{
  "name": "hono-runtime",
  "version": "0.1.7",
  "description": "Instantiate hono using the same code across different runtimes.",
  "type": "module",
  "author": "Jason Go <jasongo@jasongo.net>",
  "license": "MIT",
  "keywords": [
    "hono",
    "router",
    "bun",
    "cloudflare",
    "workers",
    "deno",
    "fastly",
    "compute@edge",
    "runtime",
    "adapter"
  ],
  "dependencies": {
    "hono": "^3.0.3"
  },
  "devDependencies": {
    "denoify": "^1.4.10",
    "rimraf": "^4.3.0",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "$npm_execpath run build:esm && $npm_execpath run build:cjs && $npm_execpath run build:types",
    "build:esm": "tsc --module es2020  --outDir ./lib/esm/",
    "build:cjs": "tsc --module commonjs  --outDir ./lib/cjs/",
    "build:types": "tsc --declaration true --emitDeclarationOnly true --outDir ./lib/types/"
  },
  "exports": {
    "./*": {
      "import": "./lib/esm/*.js",
      "require": "./lib/cjs/*.js",
      "types": "./lib/types/*.d.ts"
    }
  }
}